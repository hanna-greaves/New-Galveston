{
    "compilerOptions": {
      "outDir": "build",
      "declaration": true,
      "module": "commonjs",
      "jsx": "react",
      "lib": ["dom", "es2017"],
      "moduleResolution": "node",
      "noImplicitAny": true,
      "target": "es6",
      "types": [
        "node"
      ],
      "typeRoots": [
        "node_modules",
        "node_modules/@types",
        "./types"
      ],
      "baseUrl": "./src"
    },
    "include": [
      "src/**/*"
    ]
}